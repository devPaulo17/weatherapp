<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFF">

    <TextView
        android:id="@+id/textView_week_day"
        android:layout_width="@dimen/layout_width_80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_marginStart8dp"
        android:layout_marginTop="@dimen/layout_marginTop_30dp"
        android:layout_marginEnd="@dimen/layout_marginEnd_16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Week Day" />

    <ImageView
        android:id="@+id/imageView_graph_forecast"
        android:layout_width="@dimen/layout_width_36dp"
        android:layout_height="@dimen/layout_height_36dp"
        android:layout_marginTop="@dimen/layout_marginTop_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_week_day" />

    <TextView
        android:id="@+id/textView_temperature_forecast"
        android:layout_width="@dimen/layout_width_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_marginBottom_16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_graph_forecast"
        tools:text="temperature" />
</androidx.constraintlayout.widget.ConstraintLayout>